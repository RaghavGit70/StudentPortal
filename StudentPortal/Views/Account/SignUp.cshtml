@model StudentPortal.Models.SignUpViewModel


@{
    ViewBag.Title = "SignUp";
}
<h2>SignUp</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Account_Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.account_Information.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.account_Information.UserName, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.account_Information.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.account_Information.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.account_Information.Email, new { htmlAttributes = new { @class = "form-control", @id= "Email", @oninput = "validateEmail()" } })
                @Html.ValidationMessageFor(model => model.account_Information.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.account_Information.Role, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                admin
                @Html.RadioButtonFor(model => model.account_Information.Role, "admin", new { id = "Role" })
                user
                @Html.RadioButtonFor(model => model.account_Information.Role, "user", new { id = "Role" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.account_Information.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.account_Information.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.account_Information.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SignUp" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Click to Login", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ValidateEmail.js")
}
